<%= form_with(model: entity) do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.select :user_id, @users.all.collect {|group| [group. name, group.id]} , :required => 'required',   class:"form-select" %>
   </div>

<div>
    <%= form.label :mandarina, style: "display: block" %>
    <%= form.select :group_id, @groups.all.collect {|group| [group. name, group.id]},{
    include_blank: true} , :required => 'required',   class:"form-select" %>
  </div>



  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
